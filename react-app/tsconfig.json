{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "esnext",
    "outDir": "dist",
    "strict": true,
    "target": "es2018",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve"
  },
  "files": [
    "./hardhat.config.ts",
    "./helper-hardhat-config.ts"
  ],
  "include": [
    "./scripts",
    "./test",
    "./deploy",
    "./deploy-helpers"
  ]
}
